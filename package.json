{
  "name": "git-quick-stage",
  "displayName": "Git QuickStage",
  "description": "QuickPick menu to stage changes with keyboard",
  "repository": "http://www.github.com/floppydisco/git-stage-file",
  "publisher": "bs-code",
  "icon": "icon.png",
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "menus": {
      "scm/title": [
        {
          "command": "gitStageFile.quickStage",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "gitStageFile.quickStage",
        "title": "QuickStage",
        "category": "Git",
        "icon": "$(versions)"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+s",
        "command": "gitStageFile.quickStage",
        "when": "focusedView === 'workbench.scm'",
        "mac": "cmd+s"
      },
      {
        "key": "ctrl+shift+s",
        "command": "gitStageFile.stageAll",
        "when": "gitStageFilePicker",
        "mac": "cmd+shift+s"
      },
      {
        "key": "ctrl+shift+u",
        "command": "gitStageFile.unstageAll",
        "when": "gitStageFilePicker",
        "mac": "cmd+shift+u"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
