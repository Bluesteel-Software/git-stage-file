{
  "name": "git-quick-stage",
  "displayName": "Git QuickStage",
  "description": "QuickPick menu to stage file changes with keyboard",
  "repository": "http://www.github.com/floppydisco/git-stage-file",
  "publisher": "bs-code",
  "icon": "icon.png",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Quick Stage",
      "properties": {
        "quickStage.previewDiff": {
          "type": "boolean",
          "default": true,
          "description": "Whether or not to diff preview the file while using Quick Stage."
        }
      }
    },
    "menus": {
      "scm/title": [
        {
          "command": "quickStage.quickStage",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    },
    "whenContext": [
      {
        "key": "QuickStageVisible",
        "description": "QuickStage file picker is visible",
        "type": "boolean"
      }
    ],
    "commands": [
      {
        "command": "quickStage.quickStage",
        "title": "QuickStage",
        "category": "Git",
        "icon": "$(versions)"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+s",
        "command": "quickStage.quickStage",
        "when": "focusedView === 'workbench.scm'",
        "mac": "cmd+s"
      },
      {
        "key": "space",
        "command": "quickStage.toggleChanges",
        "when": "QuickStageVisible",
        "mac": "space"
      },
      {
        "key": "delete",
        "command": "quickStage.discardChanges",
        "when": "QuickStageVisible",
        "mac": "delete"
      },
      {
        "key": "ctrl+backspace",
        "command": "quickStage.discardChanges",
        "when": "QuickStageVisible",
        "mac": "cmd+backspace"
      },
      {
        "key": "ctrl+o",
        "command": "quickStage.openFile",
        "when": "QuickStageVisible",
        "mac": "cmd+o"
      },
      {
        "key": "alt+up",
        "command": "quickStage.scrollEditorUp",
        "when": "QuickStageVisible",
        "mac": "ctrl+up"
      },
      {
        "key": "alt+down",
        "command": "quickStage.scrollEditorDown",
        "when": "QuickStageVisible",
        "mac": "ctrl+down"
      },
      {
        "key": "shift+ctrl+s",
        "command": "quickStage.stageAll",
        "when": "QuickStageVisible",
        "mac": "shift+cmd+s"
      },
      {
        "key": "shift+ctrl+u",
        "command": "quickStage.unstageAll",
        "when": "QuickStageVisible",
        "mac": "shift+cmd+u"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
